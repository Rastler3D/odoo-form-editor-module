<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_editor_template_form" model="ir.ui.view">
        <field name="name">form.editor.template.form</field>
        <field name="model">form.editor.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="total_responses"/>
                    </group>
                    <notebook>
                        <page string="Questions">
                            <field name="question_ids">
                                <tree>
                                    <field name="question_text"/>
                                    <field name="question_type"/>
                                    <field name="number_of_answers"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="question_text"/>
                                        <field name="question_type"/>
                                        <field name="number_of_answers"/>
                                        <field name="average_number" attrs="{'invisible': [('question_type', '!=', 'number')]}"/>
                                        <field name="min_number" attrs="{'invisible': [('question_type', '!=', 'number')]}"/>
                                        <field name="max_number" attrs="{'invisible': [('question_type', '!=', 'number')]}"/>
                                        <field name="popular_answers" attrs="{'invisible': [('question_type', '=', 'number')]}"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_form_editor_template_tree" model="ir.ui.view">
        <field name="name">form.editor.template.tree</field>
        <field name="model">form.editor.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="author"/>
                <field name="total_responses"/>
            </tree>
        </field>
    </record>

    <record id="action_form_editor_template" model="ir.actions.act_window">
        <field name="name">Form Editor Templates</field>
        <field name="res_model">form.editor.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>