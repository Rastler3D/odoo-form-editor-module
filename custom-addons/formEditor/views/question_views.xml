<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_editor_question_tree" model="ir.ui.view">
        <field name="name">form.editor.question.tree</field>
        <field name="model">form.editor.question</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="question_text"/>
                <field name="question_type"/>
            </tree>
        </field>
    </record>

    <record id="view_form_editor_question_form" model="ir.ui.view">
        <field name="name">form.editor.question.form</field>
        <field name="model">form.editor.question</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="question_text"/>
                        <field name="question_type"/>
                        <field name="template_id"/>
                    </group>
                    <group string="Aggregation Results" attrs="{'invisible': [('question_type', '=', 'text')]}">
                        <group attrs="{'invisible': [('question_type', '!=', 'number')]}">
                            <field name="average_number"/>
                            <field name="min_number"/>
                            <field name="max_number"/>
                        </group>
                        <group attrs="{'invisible': [('question_type', '!=', 'boolean')]}">
                            <field name="true_count_boolean"/>
                            <field name="false_count_boolean"/>
                        </group>
                        <group attrs="{'invisible': [('question_type', '!=', 'select')]}">
                            <field name="option_counts"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>